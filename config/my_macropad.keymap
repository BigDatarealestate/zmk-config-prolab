#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    keymap {
        compatible = "zmk,keymap";

        // --- 레이어 0: 기본 ---
        default_layer {
            bindings = <
                &kp F13      &kp F14      &kp F15
                &kp F16      &kp F17      &kp F18
                
                // 1. A키를 길게 누르면 1번 레이어로 이동(&lt 1), 짧게 누르면 A 입력(&kp A)
                &lt 1 A      &none        &none
            >;
        };

        // --- 레이어 1: 기능 ---
        function_layer {
            bindings = <
                &trans       &trans       &trans
                &trans       &trans       &trans

                // 2. 1번 레이어의 같은 위치에 블루투스 초기화 명령을 배치
                //    A키를 길게 누르고 있으면 이 키가 활성화됩니다.
                &kp Z        &trans       &trans
            >;
        };
    };
};
